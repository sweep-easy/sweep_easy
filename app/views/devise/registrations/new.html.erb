<%
  label_classes = "block mb-2 font-extrabold"
  input_classes = "inline-block w-full p-4 leading-6 text-lg font-extrabold placeholder-indigo-900 bg-white shadow border-2 border-indigo-900 rounded"
%>
<section class="py-26 bg-white">
  <div class="container px-4 mx-auto">
    <div class="max-w-lg mx-auto">
      <div class="text-center mb-8">
        <%= link_to root_path, class: "inline-block mx-auto mb-6" do %>
          <%= inline_svg_tag "logo.svg", alt: "SweepEasy", class: "logo" %>
        <% end %>
        <h2 class="text-3xl md:text-4xl font-extrabold mb-2">Create an account</h2>
        <p class="text-lg font-extrabold leading-7 text-indigo-500">Start using SweepEasy today!</p>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mb-6">
          <%= f.label :name, class: label_classes %>
          <%= f.text_field :name, autofocus: true, required: true, autocomplete: "name", class: input_classes %>
        </div>
        <div class="mb-6">
          <%= f.label :email, class: label_classes %>
          <%= f.email_field :email, required: true, autocomplete: "email", class: input_classes %>
        </div>
        <div class="flex flex-row space-x-6">
          <div class="flex-1 mb-6">
            <%= f.label :phone, class: label_classes %>
            <%= f.phone_field :phone, autocomplete: "phone", class: input_classes %>
          </div>
          <div class="flex-1 mb-6">
            <%= f.label :company_name, class: label_classes %>
            <%= f.text_field :company_name, autocomplete: "company", class: input_classes %>
          </div>
        </div>
        <div class="mb-6">
          <%= f.label :password, class: label_classes %>
          <%= f.password_field :password, required: true, autocomplete: "new-password", class: input_classes %>
        </div>
        <div class="mb-6">
          <%= f.label :terms_of_service do %>
            <%= f.check_box :terms_of_service, required: true %>
            <span class="ml-1 font-extrabold">
              I agree to the <%= link_to "terms of service", terms_path, class: "text-indigo-500 hover:underline" %>
              and <%= link_to "privacy policy", privacy_path, class: "text-indigo-500 hover:underline" %>.
            </span>
          <% end %>
        </div>
        <%= f.submit "Sign Up", class: "inline-block w-full py-4 px-6 mb-6 text-center text-lg leading-6 text-white font-extrabold bg-indigo-800 hover:bg-indigo-900 border-3 border-indigo-900 shadow rounded transition duration-200" %>
        <p class="text-center font-extrabold">
          Already have an account?
          <%= link_to "Log in", new_user_session_path, class: "text-indigo-500 hover:underline" %>
        </p>
      <% end %>
    </div>
  </div>
</section>

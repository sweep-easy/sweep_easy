<%
  label_classes = "block mb-2 font-extrabold"
  input_classes = "inline-block w-full p-4 leading-6 text-lg font-extrabold placeholder-indigo-900 bg-white shadow border-2 border-indigo-900 rounded"
%>
<section class="py-26 bg-white">
  <div class="container px-4 mx-auto">
    <div class="max-w-lg mx-auto">
      <div class="text-center mb-8">
        <%= link_to root_path, class: "inline-block mx-auto mb-6" do %>
          <%= inline_svg_tag "logo.svg", alt: "SweepEasy", class: "logo" %>
        <% end %>
        <h2 class="text-3xl md:text-4xl font-extrabold mb-2">Sign in</h2>
        <p class="text-lg font-extrabold leading-7 text-indigo-500">Sign in</p>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mb-6">
          <%= f.label :email, class: label_classes %>
          <%= f.email_field :email, required: true, autocomplete: "email", class: input_classes %>
        </div>
        <div class="mb-6">
          <%= f.label :password %>
          <%= f.password_field :password, required: true, autocomplete: "current-password", class: input_classes %>
        </div>
        <div class="flex flex-wrap -mx-4 mb-6 items-center justify-between">
          <div class="w-full lg:w-auto px-4 mb-4 lg:mb-0">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              <span class="ml-1 font-extrabold">Remember me</span>
            <% end %>
          </div>
          <div class="w-full lg:w-auto px-4">
            <%= link_to "Forgot your password?", new_user_password_path, class: "inline-block font-extrabold hover:underline" %>
          </div>
        </div>
        <%= f.submit "Sign in", class: "inline-block w-full py-4 px-6 mb-6 text-center text-lg leading-6 text-white font-extrabold bg-indigo-800 hover:bg-indigo-900 border-3 border-indigo-900 shadow rounded transition duration-200" %>
        <p class="text-center font-extrabold">Don't have an
          account? <%= link_to "Sign up", new_user_registration_path, class: "text-indigo-500 hover:underline" %>
      <% end %>
    </div>
  </div>
</section>
